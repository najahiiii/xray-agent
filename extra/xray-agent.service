[Unit]
Description=Xray Provisioning Agent
After=network-online.target
Wants=network-online.target

[Service]
User=root
Group=root
ExecStart=/usr/local/bin/xray-agent -config /etc/xray-agent/config.yaml
Restart=always
RestartSec=3
NoNewPrivileges=yes
LimitNOFILE=1048576

[Install]
WantedBy=multi-user.target
